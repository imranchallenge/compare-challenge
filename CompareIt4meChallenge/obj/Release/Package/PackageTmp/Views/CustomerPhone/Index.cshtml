@model IEnumerable<CompareIt4meChallenge.Models.CustomerPhone>

@{
    ViewBag.Title = "Index";
}

<h2>Customer Phone</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form method="get">

    <input type="search" name="searchTerm" />
    <input type="submit" value="Customer Phone Search" />
</form>

@foreach (var item in Model)
{
    <div class="review">
        <h4>Customer ID: @item.CustomerId</h4>

        <span>Phone Number : @item.PhoneNumber</span>

        @if (item.Active == false)
        {
             @Html.ActionLink("Active", "Edit", new { id = item.Id })
        }
        
    </div>
}